						<ZSL_WaterSlime>0.01</ZSL_WaterSlime>
					</value>
				</li>
				
			<!-- sparse oasis -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_Oasis"]/wildAnimals</xpath>
					<value>
						<ZSL_RainbowSlime>0.001</ZSL_RainbowSlime>
						<ZSL_JadeSlime>0.008</ZSL_JadeSlime>
						<ZSL_WaterSlime>0.01</ZSL_WaterSlime>
					</value>
				</li>
					
			</operations>
		</match>
	</Operation>


</Patch>
