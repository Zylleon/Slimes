						<ZSL_SteelSlime>0.01</ZSL_SteelSlime>
						<ZSL_WaterSlime>0.01</ZSL_WaterSlime>
					</value>
				</li>
				
			<!-- temperate-cold desert -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_TemperateDesert"]/wildAnimals</xpath>
					<value>
						<ZSL_RainbowSlime>0.001</ZSL_RainbowSlime>
						<ZSL_SteelSlime>0.03</ZSL_SteelSlime>
						<ZSL_ChemfuelSlime>0.005</ZSL_ChemfuelSlime>
						<ZSL_FireSlime>0.005</ZSL_FireSlime>
