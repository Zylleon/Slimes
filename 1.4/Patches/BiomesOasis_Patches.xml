<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biomes! Oasis</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="BMT_ChromaticOasis"]/wildAnimals</xpath>
					<value>
						<ZSL_RainbowSlime>0.001</ZSL_RainbowSlime>
						<ZSL_WoodSlime>0.01</ZSL_WoodSlime>
						<ZSL_SteelSlime>0.003</ZSL_SteelSlime>
						<ZSL_JadeSlime>0.008</ZSL_JadeSlime>
						<ZSL_WaterSlime>0.01</ZSL_WaterSlime>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>


</Patch>

