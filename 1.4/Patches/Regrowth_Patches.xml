<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ReGrowth: Aspen Forests</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RG-AF_AspenForest"]/wildAnimals</xpath>
					<value>
						<ZSL_RainbowSlime>0.001</ZSL_RainbowSlime>
						<ZSL_SilverSlime>0.001</ZSL_SilverSlime>
						<ZSL_WoodSlime>0.02</ZSL_WoodSlime>
						<ZSL_WaterSlime>0.01</ZSL_WaterSlime>
					</value>
				</li>
					
			</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ReGrowth: Wastelands</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RG-W_Wasteland"]/wildAnimals</xpath>
					<value>
						<ZSL_RainbowSlime>0.001</ZSL_RainbowSlime>
						<ZSL_SteelSlime>0.03</ZSL_SteelSlime>
						<ZSL_ChemfuelSlime>0.05</ZSL_ChemfuelSlime>
						<ZSL_FireSlime>0.01</ZSL_FireSlime>
						<ZSL_WaterSlime>0.01</ZSL_WaterSlime>
					</value>
				</li>
					
			</operations>
		</match>
	</Operation>

</Patch>

